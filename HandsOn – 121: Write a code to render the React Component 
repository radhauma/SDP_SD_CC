import ReactDOM from 'react-dom'; 

function tick() { 

  const element = ( 

    <div> 

      <h1>Hello, world!</h1> 

      <h2>It is {new Date().toLocaleTimeString()}.</h2> 

    </div> 

  ); 

  root.render(element); 

} 

 

