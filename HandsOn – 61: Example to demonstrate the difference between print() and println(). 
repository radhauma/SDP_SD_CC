public class PrintAndPrintlnExample { 

    public static void main(String[] args) { 

        int number = 42; 

        String message = "Hello, World!"; 

        // Using print to display output on the same line 

        System.out.print("Using print: "); 

        System.out.print(number); 

        System.out.print(" "); 

        System.out.print(message); 

        System.out.println(); 

        // Using println to display output on separate lines 

        System.out.println("Using println: " + number); 

        System.out.println("Hello,"); 

        System.out.println("World!"); 

    } 

} 
